# ITER SimDB Configuration
SIMDB_USERNAME=your_iter_username
SIMDB_PASSWORD=your_iter_password
SIMDB_REMOTE_URL=https://simdb.iter.org/scenarios/api
SIMDB_REMOTE_NAME=iter

# OpenRouter Configuration (OpenAI-compatible API)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Embedding Model Configuration
EMBEDDING_MODEL=openai/text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# LLM Configuration
LLM_MODEL=anthropic/claude-3.5-sonnet
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# ChromaDB Configuration
CHROMADB_PATH=./data/chromadb
CHROMADB_COLLECTION_NAME=nucleai_embeddings

# Logging
LOG_LEVEL=INFO
