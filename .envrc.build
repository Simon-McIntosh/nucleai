# Build environment for imas-core on SDCC
# Usage: source .envrc.build && uv sync --reinstall-package imas-core

if [[ "$(hostname)" == *.iter.org ]]; then
    module load CMake/3.27.6-GCCcore-13.2.0
    module load HDF5/1.14.4.3-gompi-2023b
    module load UDA/2.9.1-GCC-13.2.0
    export NUCLEAI_BUILD_ENV=sdcc
else
    export NUCLEAI_BUILD_ENV=local
    return 1
fi
