# Automatically load required modules for nucleai development
# This file is used by direnv (if installed) or can be sourced manually

# Only load modules on SDCC (check for module command and SDCC-specific paths)
if command -v module &> /dev/null && [[ -d "/work/imas" ]]; then
    # Load GCC module for libstdc++ (GLIBCXX_3.4.32) needed by imas_core
    module load GCC/13.2.0 2>/dev/null || true
    export NUCLEAI_ENV=sdcc
else
    # Not on SDCC - imas_core won't work but other functionality will
    export NUCLEAI_ENV=local
fi
